ll n, i;
		cin >> n;
		vector<ll> v;
		for (i = 2; i * i <= n; i++)
		{
			while (n % i == 0)
			{
				v.pb(i);
				n = n / i;
			}
		}
		if (n != 1)
		{
			v.pb(n);
		}
]]></content>
